DECLARE FUNCTION VOLUME (R)
DECLARE FUNCTION AREA (R)

CLS
INPUT "ENTER RADIUS"; R
PRINT "VOLUME OF SPHERE "; VOLUME(R)
PRINT "AREA OF SPHERE "; AREA(R)
